{
  "name": "vinceamazing-profile-page",
  "author": "Lineng(Vince) CAO",
  "license": "MIT",
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.2.0",
    "@vincecao/use-tools": "^1.3.0",
    "axios": "^0.27.2",
    "classnames": "^2.3.1",
    "framer-motion": "^6.3.11",
    "npm-run-all": "^4.1.5",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-scripts": "^5.0.1",
    "typescript": "^4.7.3"
  },
  "devDependencies": {
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.42",
    "@types/react": "^18.0.12",
    "@types/react-dom": "^18.0.5",
    "@typescript-eslint/parser": "^5.27.1",
    "autoprefixer": "^10.4.7",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.1",
    "postcss": "^8.4.14",
    "postcss-cli": "^9.1.0",
    "prettier": "^2.6.2",
    "tailwindcss": "^3.1.2"
  },
  "scripts": {
    "start": "run-p start:*",
    "start:tailwindcss": "npm run tailwindcss -- --watch",
    "start:react": "react-scripts start",
    "build": "run-s build:*",
    "build:tailwindcss": "npm run tailwindcss -- --prod",
    "build:react": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "tailwindcss": "npx tailwindcss -i ./src/index.tailwind.css -c ./tailwind.config.js -o ./src/tailwind.css",
    "prestart": "yarn build:tailwindcss"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
